# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# Web files (for your HTML/CSS/JS)
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Requirements and setup files
requirements*.txt text eol=lf
setup.py text eol=lf
setup.cfg text eol=lf

# License files
LICENSE text eol=lf
COPYING text eol=lf

# Shell scripts
*.sh text eol=lf

# SVG files (keep as text for better diffs)
*.svg text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Python bytecode (shouldn't be in repo, but just in case)
*.pyc binary
*.pyo binary

# Ignore files in export
.gitignore export-ignore
.gitattributes export-ignore
__pycache__/ export-ignore
*.pyc export-ignore
.pytest_cache/ export-ignore
