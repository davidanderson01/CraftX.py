# Ultra-secure Dockerfile with Ubuntu 24.04 base
FROM ubuntu:24.04

# Install Python and security updates
RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get dist-upgrade -y && \
    apt-get install -y --no-install-recommends \
    python3.12 \
    python3-pip \
    python3-venv \
    curl \
    ca-certificates && \
    apt-get autoremove -y && \
    apt-get autoclean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Create non-root user early
RUN groupadd -r -g 1001 craftx && \
    useradd -r -u 1001 -g craftx -d /app -s /bin/false craftx

# Setup Python virtual environment
RUN python3 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Install Python dependencies
COPY requirements.txt /tmp/
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r /tmp/requirements.txt && \
    rm -f /tmp/requirements.txt

# Install Ollama binary directly
ENV OLLAMA_VERSION=0.3.12
RUN curl -fsSL "https://github.com/ollama/ollama/releases/download/v${OLLAMA_VERSION}/ollama-linux-amd64" -o /usr/local/bin/ollama && \
    chmod +x /usr/local/bin/ollama

# Setup application
WORKDIR /app
COPY craftx.py start.sh ./
RUN chmod +x start.sh && \
    chown -R craftx:craftx /app

# Create Ollama data directory
RUN mkdir -p /home/craftx/.ollama && \
    chown -R craftx:craftx /home/craftx

# Switch to non-root user
USER craftx

# Set Ollama environment
ENV OLLAMA_HOST=0.0.0.0
ENV HOME=/home/craftx

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

EXPOSE 8000

# JSON format for proper signal handling
CMD ["/bin/bash", "./start.sh"]
