# Minimal Ubuntu base with critical security updates
FROM ubuntu:24.04

# Install minimal system packages with security updates
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    python3.12 \
    python3-pip \
    ca-certificates \
    curl \
    && apt-get upgrade -y \
    && apt-get autoremove -y \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Create non-root user early
RUN groupadd -r craftx && useradd -r -g craftx -d /app -s /bin/false craftx

# Install Python dependencies as root
COPY requirements.txt /tmp/
RUN pip3 install --no-cache-dir --break-system-packages -r /tmp/requirements.txt \
    && rm /tmp/requirements.txt

# Install Ollama
RUN curl -fsSL https://ollama.com/install.sh | sh

# Setup application directory
WORKDIR /app
COPY craftx.py .
RUN chown -R craftx:craftx /app

# Create startup script
RUN echo '#!/bin/bash\nset -e\nollama serve &\nuvicorn craftx:app --host 0.0.0.0 --port 8000' > /app/start.sh \
    && chmod +x /app/start.sh \
    && chown craftx:craftx /app/start.sh

# Switch to non-root user
USER craftx

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

EXPOSE 8000

# Use JSON format for proper signal handling
CMD ["/bin/bash", "/app/start.sh"]
